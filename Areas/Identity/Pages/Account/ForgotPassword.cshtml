@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Glömt ditt lösenord?";
}
<div class="section">
    <div id="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2 high social">
                    <ul>
                        <li>
                            <i class="fab fa-instagram"></i>
                        </li>
                        <li><i class="fab fa-facebook"></i></li>
                    </ul>
                </div>
                <div class="col high main">
                    <h1>Glömt lösenord</h1>
                </div>
                <div class="col-sm-5 high">
                    <img src="~/images/man.png" alt="En man" />


                </div>
            </div>
        </div>
    </div>
</div>
<div class="section container marginTop">

  
        <h4>Skriv din emailadress.</h4>
        <hr />
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Skicka</button>
                </form>
            </div>
            <div class="col-md-4"></div>
        </div>

            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }
        </div>
