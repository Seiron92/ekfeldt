@model project.Models.Bidding

@{
    ViewData["Title"] = "Ändra budgivare";
}

<div class="section">
    <div id="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2 high social">
                    <ul>
                        <li>
                            <i class="fab fa-instagram"></i>
                        </li>
                        <li><i class="fab fa-facebook"></i></li>
                    </ul>
                </div>
                <div class="col high main">
                    <h1>Ändra budgivare</h1>

                </div>
                <div class="col-sm-5 high">
                    <img src="~/images/man.png" alt="En man" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container marginTop">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BiddingId" />
                <div class="form-group">
                    @foreach (var pers in (List<Persons>)ViewBag.persons)
                    {
                        <label class="control-label">Budgivare </label>
                        <input class="form-control" readonly value="@pers.FirstName" />
                               }

                       

                    </div>
    

                <div class="form-group">
                    @{ foreach (var item in ViewBag.home)
                        {
                                        <label>Objektetets adress</label>
                            <input class="form-control" readonly value="@item" />
                        }
                    }

                    <input type="hidden" asp-for="HomeId" class="form-control" />
                   
                </div>
                <div class="form-group">
                    <input type="submit" value="Spara" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Gå tillbaka</a>
    </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    <script src="~/js/menu.js"></script>
