@model project.Models.Image

@{
    ViewData["Title"] = "Ändra bild";
}
    <div class="section">
        <div id="header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-2 high social">
                        <ul>
                            <li>
                                <i class="fab fa-instagram"></i>
                            </li>
                            <li><i class="fab fa-facebook"></i></li>
                        </ul>
                    </div>
                    <div class="col high main">
                        <h1>Ändra bild</h1>

                    </div>
                    <div class="col-sm-5 high">
                        <img src="~/images/man.png" alt="En man" />
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="container marginTop">

<h4>Bild</h4>
<hr />
<div class="row">
    <div class="col imageFix">
        <img src="~/images/@Model.ImageAdress" />
    </div>
    <div class="col-md-4 imageFix">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ImageId" />

    
            <div class="form-group">

                <input asp-for="ImageAdress" type="hidden" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="ImageText" class="control-label"></label>
                <input asp-for="ImageText" class="form-control" />
                <span asp-validation-for="ImageText" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
           
                    <input type="hidden" class="form-check-input" asp-for="HeroImage" /> 
            
            </div>
            <div class="form-group form-check">
              
                    <input type="hidden" class="form-check-input" asp-for="FloorPlan" />
               
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="HomeIds" class="form-control" />
                <input type="hidden" name="HomeIdt" value="@Model.HomeIds" />
                <input type="hidden" name="BrokId" value="@ViewBag.BrokerId" />
                

            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input id="imgInp" required asp-for="Photo" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
                <img id="displayImage" src="" />
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="Homes"  asp-route-BrokerId="@ViewBag.BrokerId" asp-route-id="@Model.HomeIds">Gå tillbaka</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/js/menu.js"></script>
<script>
        // FOR IMAGE
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#displayImage').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
         
        }
    }
    $("#imgInp").change(function () {
        readURL(this);
    });


</script>