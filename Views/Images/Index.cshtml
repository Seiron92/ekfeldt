@model IEnumerable<project.Models.Image>

@{
    ViewData["Title"] = "Index";
}
    <div class="section container">
        <h1>Index</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageAdress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageText)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HeroImage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FloorPlan)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HomeIds)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImageAdress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImageText)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HeroImage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FloorPlan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HomeIds)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ImageId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ImageId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ImageId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="~/js/menu.js"></script>