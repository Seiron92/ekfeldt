@model project.Models.Persons

@{
    ViewData["Title"] = "Personinformation";
}


<div class="section">
    <div id="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2 high social">
                    <ul>
                        <li>
                            <i class="fab fa-instagram"></i>
                        </li>
                        <li><i class="fab fa-facebook"></i></li>
                    </ul>
                </div>
                <div class="col high main">
                    @{ if (Model.Bidder == true)
                        {
                            <h1>Budgivare </h1>
                        } }
                    @{ if (Model.Viewer == true)
                        {
                            <h1>Inbokad på visning</h1>
                        } }

                </div>
                <div class="col-sm-5 high">
                    <img src="~/images/man.png" alt="En man" />


                </div>
            </div>
        </div>
    </div>
</div>

<div class="container marginTop">

    <div>

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Street)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Street)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PostalCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PostalCode)
            </dd>
            @{ if (Model.Bidder == true)
                {

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Bidder)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Bidder)
                    </dd>
                } }
            @{ if (Model.Viewer == true)
                {
                    @foreach (var demo in (List<Demonstration>)ViewBag.demos)
                    {
                        var date = demo.BookingDate.ToString("yyyy/MM/dd");
                        var time = demo.BookingTime.ToString("HH:mm");


                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Viewer)
                    </dt>
                    <dd class="col-sm-10">
                        @date, kl: @time
                    </dd>
                    } } }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNUmber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNUmber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-2">
               Objekt
            </dt>
            <dd class="col-sm-10">
                @{ 
                    foreach(var item in @ViewBag.Home)
                    {
                        @item
                    }
                }
              
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-demoId="@Model.DemonstrationId" asp-route-HomeId="@Model.HomeId" asp-route-id="@Model.PersonId">Ändra</a>  |
        <a asp-action="Index" asp-route-demoId="@Model.DemonstrationId" asp-route-HomeId="@Model.HomeId" >Gå tillbaka</a>
    </div>
</div>

<script src="~/js/menu.js"></script>